<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <EditText android:id="@+id/setting_fontsize"
              android:layout_width="160dp"
              android:layout_height="wrap_content"
              android:hint="@string/setting_fontsize"
              android:text="40"/>
    <EditText android:id="@+id/setting_fontcolor"
              android:layout_width="160dp"
              android:layout_height="wrap_content"
              android:hint="@string/setting_fontcolor"
              android:text="blue"/>
    <EditText android:id= "@+id/setting_address"
              android:layout_width="200dp"
              android:layout_height="wrap_content"
              android:text="manibh.dnsd.me"/>
    <EditText android:id= "@+id/setting_port"
              android:layout_width="160dp"
              android:layout_height="wrap_content"
              android:text="5222"/>
    <EditText android:id= "@+id/setting_user"
              android:layout_width="160dp"
              android:layout_height="wrap_content"
              android:text="mani"/>
    <EditText android:id= "@+id/setting_password"
              android:layout_width="160dp"
              android:layout_height="wrap_content"
              android:password="true"
              android:text="mani"/>
    <Button   android:layout_width="60dp"
              android:layout_height="wrap_content"
              android:hint="@string/setting_set_button"
              android:onClick="setButton" android:layout_gravity="center_horizontal"/>
</LinearLayout>