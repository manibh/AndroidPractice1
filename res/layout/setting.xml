<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="horizontal"
              android:layout_width="match_parent"
              android:layout_height="match_parent">
    <EditText android:id="@+id/setting_fontsize"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:hint="@string/setting_fontsize"/>
    <EditText android:id="@+id/setting_fontcolor"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:hint="@string/setting_fontcolor"/>
    <Button   android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:hint="@string/setting_set_button"
              android:onClick="setButton"/>
</LinearLayout>